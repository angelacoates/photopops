    <header class="masthead">
        <div class="container">
            <div class="row">
                <div class="col-sm-7">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <h1>Find anyone, anywhere, at anytime to pop up and take your photos so that you'll never miss a moment or be left out of the picture again. </h1>
                            <%= link_to 'Login with facebook', auth_path(provider: 'facebook'), class: "btn btn-outline btn-xl" %>
                            <%= link_to 'Login with Instagram', auth_path(provider: 'instagram'), class: "btn btn-outline btn-xl" %>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="device-container">
                        <div class="device-mockup iphone6_plus portrait gold">
                            <div class="device">
                                <div class="screen">
                                    <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                    <%= image_tag("Friends-and-Family-1.jpg", class: "landing-page-phone-image") %>
                                </div>
                                <div class="button">
                                    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


