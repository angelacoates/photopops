
<header class="masthead">
  <div class="container">
    <div class="page-header">
      <h1>
        <span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
        My Photos
      </h1>
    </div>

    <div class="picturesindex row">

      <% 1.times do %>
      <% current_user.photos.each do |photo| %>
        <% if photo.image_url(:medium) %>
          <div class="col-xs-3 col-md-3 my-photo">
            <%= image_tag(photo.image_url(:medium), class: "img-thumbnail") %>
            <%= link_to request_photo_path(current_user, photo.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <% end %>
    </div>
  </div>
</header>

<div class="modal fade" id="update-profile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Profile</h4>
      </div>
      <div class="modal-body">
        <%= form_for current_user, html: { class: "new_request form-horizontal" } do |user| %>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 inline">
              <%= user.label :pro_camera, class: "checkbox-inline" do %>
                <%= user.check_box :pro_camera %>
                Professional Camera
              <% end %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 inline">
              <%= user.label :opt_in, class: "checkbox-inline" do %>
                <%= user.check_box :opt_in %>
              Available
              <% end %>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <%= user.submit "Save", class:'btn btn-warning'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
